<%= form_tag user_sessions_path, method: :post, class: 'form-horizontal' do %>
  <div class="form-group">
    <%= label_tag :email, 'Email', class: 'text-left control-label col-sm-4' %>
    <div class="col-sm-8">
      <%= text_field_tag :email, params[:email], placeholder: 'Email', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :password, 'Password', class: 'text-left control-label col-sm-4' %>
    <div class="col-sm-8">
      <%= password_field_tag :password, params[:password], placeholder: 'Password', class: 'form-control' %>
    </div>
  </div>
  <div class="clearfix">
    <div class="pull-right">
      <%= check_box_tag :remember_me, true, params[:remember_me] %>
      <%= label_tag :remember_me, 'Remember Me', class: 'text-right' %>
    </div>
  </div>
  <%= submit_tag 'Log In', class: 'btn btn-primary btn-block' %>
<% end %>